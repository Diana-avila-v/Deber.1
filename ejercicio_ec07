Algoritmo ICM
	Escribir "Ingrese su peso en Libras:"
	leer l
	Escribir "Ingrese su altura en centimetros"
	leer c
	kg <- l/2.20462262 
	m <- c/100
	peso <- kg/m^2
	Escribir "su ICM es: ",peso
	si peso < 16 Entonces
		Escribir "Criterio de ingreso"
	sino
		si peso < 17 Entonces
			Escribir "Infra peso"
		SiNo
			si peso < 18.5 Entonces
				Escribir "Bajo peso"
			SiNo
				si peso < 25 Entonces
					Escribir "Peso normal"
				sino 
					si peso < 30 Entonces
						Escribir "Sobrepeso"
					sino 
						si peso < 35 Entonces
							Escribir "Obesidad pre-mórbida"
						sino
							si peso < 46 Entonces
								Escribir "Obesidad mórbida"
							sino
								Escribir "Obesidad híper-mórbida"
							FinSi
						FinSi
					FinSi
				FinSi
			FinSi
		FinSi
	FinSi
FinAlgoritmo
